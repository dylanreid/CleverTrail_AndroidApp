<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E9F0EC" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <TextView
            android:id="@+id/tvEnterNameOrCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search For Trail By Location"
            android:textColor="#000000"
            android:textSize="18dip" />


            <RadioButton
                android:id="@+id/rbFindTrailByLocationProximity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:checked="true"
                android:text="Search By Your Current Location" />


            <Spinner
                android:id="@+id/cbFindTrailByLocationProximity"
                android:layout_gravity="right"
                android:layout_width="200dp"           
                android:layout_height="wrap_content" />
  
            <RadioButton
                android:id="@+id/rbFindTrailByLocationCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:checked="false"
                android:text="Search By City" />

            <EditText
                android:id="@+id/txtFindTrailByLocationCity"
                android:layout_gravity="right"
                android:layout_width="200dp"
                android:enabled="false"
                android:layout_height="wrap_content" >
            </EditText>
  
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip" />

        <Button
            android:id="@+id/btnSearchByLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp" />
    </LinearLayout>

</ScrollView>